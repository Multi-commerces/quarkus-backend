	<variable name="default.http.port" defaultValue="7080" />
	<variable name="default.https.port" defaultValue="9453" />
	<variable name="app.context.root" defaultValue="/" />

	<!-- le jeton JWT est ajouté à l'en-tête d'autorisation lorsque le service est appelé  authnToken="mpjwt" -->
<!-- 	<webTarget uri="http://localhost:7080/*"  /> -->

	<webApplication id="webmaker-webapp-shop" name="webmaker-webapp-shop"
		location="webmaker-webapp-shop-1.0.0-SNAPSHOT.war" type="war"
		contextRoot="${app.context.root}" />

	<!-- Automatically expand WAR files and EAR files -->
<!-- 	<applicationManager autoExpand="true" /> -->

	<httpEndpoint id="defaultHttpEndpoint" host="*" httpPort="${default.http.port}"
		httpsPort="${default.https.port}" />
		
</server>
