	<variable name="default.http.port" defaultValue="9080" />
	<variable name="default.https.port" defaultValue="9443" />
	<variable name="app.context.root" defaultValue="/" />

	<httpEndpoint id="defaultHttpEndpoint" host="*"
		httpPort="${default.http.port}" httpsPort="${default.https.port}" />

	<!-- le jeton JWT est ajouté à l'en-tête d'autorisation lorsque le service 
		est appelé authnToken="mpjwt" -->
	<!-- <webTarget uri="http://localhost:9080/*" /> -->

	<webApplication id="fr.webmaker" name="fr.webmaker"
		location="fr.webmaker-1.0.0-SNAPSHOT.war" type="war"
		contextRoot="${app.context.root}" />

</server>
