	<context-param>
		<description>Use this to suppress Facelets error page</description>
		<param-name>org.apache.myfaces.ERROR_HANDLING</param-name>
		<param-value>true</param-value>
	</context-param>

	<error-page>
		<exception-type>fr.commerces.exception.Exception</exception-type>
		<location>/WEB-INF/index.xhtml</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/index.xhtml</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/index.xhtml</location>
	</error-page>

	<error-page>
	    <exception-type>avax.faces.application.ViewExpiredException</exception-type>
	   <location>/WEB-INF/index.xhtml</location>
	</error-page>


</web-app>